<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Entrez une ville"
        android:inputType="text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/cityEditText"
        android:layout_toEndOf="@+id/cityEditText"/>


    <ImageView
        android:id="@+id/weatherNowImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/searchButton"
        android:layout_marginTop="32dp"
        android:contentDescription="Meteo"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:translationX="125dp" />

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TempÃ©rature : "
        android:textSize="40sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/searchButton"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ville : "
        android:textSize="24sp"
        android:layout_below="@+id/temperatureTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
    <HorizontalScrollView
        android:id="@+id/hourlyForecastHorizontalScrollView"
        android:layout_below="@+id/cityTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:context=".MainActivity">

            <ListView
                android:id="@+id/hourlyForecastListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_below="@+id/hourlyForecastHorizontalScrollView">

        <ListView
            android:id="@+id/dailyForecastListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
